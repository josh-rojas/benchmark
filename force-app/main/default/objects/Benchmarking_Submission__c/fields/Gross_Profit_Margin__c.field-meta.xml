<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Gross_Profit_Margin__c</fullName>
    <description>Gross profit margin percentage - automatically calculated</description>
    <externalId>false</externalId>
    <formula>IF(Total_Revenue__c > 0, ((Total_Revenue__c - Total_Operating_Expenses__c) / Total_Revenue__c) * 100, null)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Gross Profit Margin</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackTrending>false</trackTrending>
    <type>Percent</type>
</CustomField>